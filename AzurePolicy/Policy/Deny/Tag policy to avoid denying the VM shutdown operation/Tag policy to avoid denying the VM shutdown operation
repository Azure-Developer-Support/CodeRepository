{
  "properties": {
    "displayName": "Tag Policy - excluding VM auto shutdown update",
    "policyType": "Custom",
    "mode": "Indexed",
    "metadata": {},
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "notEquals": "Microsoft.DevTestlab/schedules"
          },
          {
            "anyOf": [
              {
                "field": "tags['application']",
                "exists": false
              },
              {
                "field": "tags['resourceowner']",
                "exists": false
              },
              {
                "field": "tags['resourcename']",
                "exists": false
              },
              {
                "field": "tags['servicename']",
                "exists": false
              },
              {
                "field": "tags['costtype']",
                "exists": false
              },
              {
                "field": "tags['costtype']",
                "notIn": [
                  "shared",
                  "dedicated"
                ]
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}
