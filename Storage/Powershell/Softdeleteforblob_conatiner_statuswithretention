# Connect to Azure

Connect-AzAccount

# Get all storage accounts in the subscription

$storageAccounts = Get-AzStorageAccount

# Iterate through each storage account
foreach ($storageAccount in $storageAccounts) 
{

    # Get the resource group and storage account name

    $resourceGroupName = $storageAccount.ResourceGroupName
    $accountName = $storageAccount.StorageAccountName


    # Get the blob and container soft delete status

    $properties = Get-AzStorageBlobServiceProperty -ResourceGroupName $resourceGroupName -Name $accountName 
    $enabled=$properties.DeleteRetentionPolicy.Enabled
    $days=$properties.DeleteRetentionPolicy.Days

    $containerenabled=$properties.ContainerDeleteRetentionPolicy.Enabled
    $containerdays=$properties.ContainerDeleteRetentionPolicy.Days

    # Print the storage account name and soft delete status of blob and Conatiner with Retention days 

    Write-Output "Storage Account: $accountName"
    Write-Output "Soft Delete Status: $enabled"
    Write-Output "Retention days: $days"
    Write-Output "Soft Delete Status: $containerenabled"
    Write-Output "Retention days: $containerdays"
    Write-Output ""
} 
